<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Atomic.App">
    <SolidColorBrush x:Key="SystemAccentBrush" Color="{ThemeResource SystemAccentColor}" />
    <SolidColorBrush x:Key="SystemAccentBrushLight" Color="{ThemeResource SystemAccentColorLight1}" />
    <SolidColorBrush x:Key="SystemAccentBrushLighter" Color="{ThemeResource SystemAccentColorLight2}" />
    <SolidColorBrush x:Key="SystemAccentBrushLightest" Color="{ThemeResource SystemAccentColorLight3}" />
</ResourceDictionary>
